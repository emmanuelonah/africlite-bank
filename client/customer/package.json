{
    "name": "@afb/customer",
    "version": "1.0.0",
    "description": "AfricliteBank Client customer package",
    "author": "emmanuelonah",
    "private": true,
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "in": "yarn install",
        "link:pkgs": "yarn --cwd ../ l &&  yarn link @afb/components && yarn link @afb/utils && yarn link @afb/services && yarn link @afb/i18n",
        "build:pkgs": "yarn --cwd ../components build && yarn --cwd ../utils build && yarn --cwd ../services build && yarn --cwd ../i18n build",
        "dev": "yarn run link:pkgs && yarn run build:pkgs && react-scripts start",
        "build": "yarn run build:pkgs && BUILD_PATH=../../../server/builds/client react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "lint": "npx eslint . --ext .ts --ext .tsx",
        "format": "prettier --write .",
        "pre:commit": "yarn run lint",
        "pre:push": "yarn run react-scripts test --watchAll=false && yarn run build",
        "test:cv": "yarn run test --coverage --watchAll=false",
        "@afb/components": "1.0.0",
        "@afb/utils": "1.0.0",
        "@afb/services": "1.0.0",
        "@afb/i18n": "1.0.0"
    },
    "dependencies": {
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^13.0.0",
        "@testing-library/user-event": "^13.2.1",
        "@types/jest": "^27.0.1",
        "@types/node": "^16.7.13",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "prettierrc": "^0.0.0-5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "5.0.1",
        "typescript": "*",
        "web-vitals": "^2.1.0"
    },
    "devDependencies": {
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "@testing-library/react-hooks": "^8.0.1",
        "@typescript-eslint/eslint-plugin": "^6.6.0",
        "@typescript-eslint/parser": "^6.6.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard-with-typescript": "^39.0.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-jest": "^27.2.3",
        "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-react": "^7.33.2",
        "prettier": "^3.0.3"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
