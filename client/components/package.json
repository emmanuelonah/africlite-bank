{
    "name": "@afb/components",
    "version": "1.0.0",
    "description": "AfricliteBank Client services package",
    "author": "emmanuelonah",
    "license": "MIT",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "module": "dist/components.esm.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "in": "yarn install",
        "l": "yarn link",
        "link:pkgs": "yarn --cwd ../ l && yarn link @afb/utils && yarn link @afb/services && yarn link @afb/i18n",
        "build:pkgs": "yarn --cwd ../utils build && yarn --cwd ../services build && yarn --cwd ../i18n build",
        "dev": "yarn run build:pkgs && yarn run link:pkgs && tsdx watch",
        "build": "yarn run build:pkgs && tsdx build",
        "test": "tsdx test --passWithNoTests",
        "lint": "npx eslint . --ext .ts",
        "format": "prettier --write './src/**/*.ts'",
        "pre:commit": "yarn run lint",
        "pre:push": "yarn run test --watchAll=false && yarn run build",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "@afb/utils": "1.0.0",
        "@afb/services": "1.0.0",
        "@afb/i18n": "1.0.0"
    },
    "peerDependencies": {
        "react": ">=16",
        "react-dom": ">=18",
        "react-i18next": ">=13",
        "react-router-dom": ">=6"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "size-limit": [
        {
            "path": "dist/components.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/components.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@size-limit/preset-small-lib": "^10.0.1",
        "@testing-library/jest-dom": "^6.1.4",
        "@testing-library/react": "^14.0.0",
        "@types/react": "^18.2.33",
        "@types/react-dom": "^18.2.14",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "eslint": "^8.52.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard-with-typescript": "^39.1.1",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-jest": "^27.6.0",
        "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
        "eslint-plugin-prettier": "^5.0.1",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "husky": "^8.0.3",
        "prettier": "^3.0.3",
        "size-limit": "^10.0.1",
        "tsdx": "^0.14.1",
        "tslib": "^2.6.2",
        "typescript": "*"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-i18next": "^13.3.1",
        "react-router-dom": "^6.18.0"
    }
}
