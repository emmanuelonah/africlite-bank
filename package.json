{
  "name": "africlite-bank",
  "version": "1.0.0",
  "description": "Africlite-bank is a pet project that implement MVP features of a banking system in NodeJs and ReactJs",
  "author": "emmanuelonah",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "in": "yarn install",
    "in:all": "yarn run in && yarn --cwd ./client in && yarn --cwd ./server/ in",
    "dev": "yarn --cwd ./client build && yarn --cwd ./server/ dev",
    "build": "yarn --cwd ./server/ build && yarn --cwd ./client build",
    "test": "yarn --cwd ./server/ test && yarn --cwd ./client test",
    "pre:commit": "yarn --cwd ./server/ pre:commit && yarn --cwd ./client pre:commit",
    "pre:push": "yarn --cwd ./server/ pre:push && yarn --cwd ./client pre:push",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.0"
  }
}
